[core]
    quotepath = false
    editor = subl
    excludesfile = ~/.gitignore_global
[color]
    ui = always
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[branch]
[alias]
    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
	lcrev = log --reverse --no-merges --stat @{1}..
    undocommit = reset --soft HEAD^
    undopush = push -f origin HEAD^:master
[push]
	default = current
[credential]
	helper = osxkeychain
